type User {
    id: ID!
    username: String!
    fullname: String!
}

type Product {
    id: ID!
    productSku: String!
    productName: String!
    productPrice: Float!
    active: Boolean!
}

type Order {
    id: ID!
    user: User!
    products: [Product]!
}

type Query {
   allUsers: [User]
   findUser(username: String!): User

   allProducts: [Product]
   findProduct(sku: String!): Product

   allOrders: [Order]
   findOrder(id: Int!): Order
}

schema {
   query: Query
}